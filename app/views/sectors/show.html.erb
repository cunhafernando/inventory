<div class="container mt-3">
  <div class="row">
    <div class="col-9">
      <h3 class="mt-3">Setor</h3>
    </div>
    <div class="col-3 text-end">
      <%= link_to "", new_sector_path, class: 'mt-3 btn btn-outline-primary bi bi-plus' %>
    </div>
    <%= render @sector %>

    <div>
      <%= link_to "Editar", edit_sector_path(@sector), class: "btn btn-primary" %>
      <%= link_to "Voltar", sectors_path, class: "btn btn-primary" %>
      <%= button_to "Apagar", @sector, method: :delete, class: "mt-2 btn btn-danger" %>
    </div>
  </div>
</div>
