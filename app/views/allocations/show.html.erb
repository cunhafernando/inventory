<div class="container mt-3">
  <div class="row">
    <div class="col-9">
      <h3 class="mt-3">Setor</h3>
    </div>
    <div class="col-3 text-end">
      <%= link_to "", new_allocation_path, class: 'mt-3 btn btn-outline-primary bi bi-plus' %>
    </div>
    <%= render @allocation %>

    <div>
      <%= link_to "Editar", edit_allocation_path(@allocation), class: "btn btn-primary" %>
      <%= link_to "Voltar", allocations_path, class: "btn btn-primary" %>
      <%= button_to "Apagar", @allocation, method: :delete, class: "mt-2 btn btn-danger" %>
    </div>
  </div>
</div>