<div class="container mt-3">
  <div class="row">
    <div class="col-9">
      <h3 class="mt-3">Fornecedores</h3>
    </div>
    <div class="col-3 text-end">
      <%= link_to "", new_supplier_path, class: 'mt-3 btn btn-outline-primary bi bi-plus' %>
    </div>
    <h1></h1>

    <div id="users">
      <table id="table" data-height="500" data-toggle="table" data-search="true" data-height="500" data-pagination="true" data-search-accent-neutralise="true" class="table table-bordered table-striped" >
        <thead>
          <tr>
            <th scope="col">Nome do fornecedor</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @suppliers.each do |supplier| %>
            <tr>
              <td><%= supplier.name %></td>
              <td><%= link_to '', supplier, class: "btn btn-primary bi bi-eye" %></td>
              <td><%= link_to '', edit_supplier_path(supplier), class: "btn btn-primary bi bi-pencil-square" %></td>
              <td><%= link_to '', supplier, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: "btn btn-danger bi bi-trash" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>